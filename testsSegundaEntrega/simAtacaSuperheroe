import heroes.*
import fixture.*
test "Sim ataca a super heroe" {
	var taxista = fixture.crearTrabajo(copado, 12000, 200)
	
	var sim1 = fixture.crearSim	(mujer,22,buenazo,5000,taxista,500)
	var sim2 = fixture.crearSim	(mujer,25,buenazo,7500,taxista,500)
	
	assert.equals(5000, sim1.dinero())
	assert.equals(7500, sim2.dinero())
	
	sim1.atacarHeroe(sim2)
	
	
	assert.equals(2500, sim2.dinero())

	
	

}
